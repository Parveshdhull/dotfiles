# Sreen brightness controls
bindsym F1 exec ~/bin/brightness-controller decrease
bindsym F3 exec ~/bin/brightness-controller increase

# Window Navigation
bindsym $mod+n focus left
bindsym $mod+e focus down
bindsym $mod+i focus up
bindsym $mod+o focus right

# Move Focused Window
bindsym $mod+$super+n move left
bindsym $mod+$super+e move down
bindsym $mod+$super+i move up
bindsym $mod+$super+o move right

# Arrow Keys for Navigation
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+$super+Left move left
bindsym $mod+$super+Down move down
bindsym $mod+$super+Up move up
