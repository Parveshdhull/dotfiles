# i3 Config File (v4)

# Variables
set mod Mod4
set $alt Mod1
set $main_display "DP-2"
set $secondary_display "DP-3"
set $ws1 "1. "
set $ws2 "2. "
set $ws3 "3. "
set $ws4 "4. "
set $ws5 "5. "
set $ws6 "6. "
set $ws7 "7. "
set $ws8 "8. "
set $ws9 "9. "
set $ws10 "10. "

# Functions
set $refresh_i3status killall -SIGUSR1 i3status

## Keybindings
# Launch applications
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+$alt+q kill
bindsym $mod+d exec dmenu_run

# Volume Control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media Controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Window Navigation
bindsym $mod+n focus left
bindsym $mod+e focus down
bindsym $mod+i focus up
bindsym $mod+o focus right

# Move Focused Window
bindsym $mod+$alt+n move left
bindsym $mod+$alt+e move down
bindsym $mod+$alt+i move up
bindsym $mod+$alt+o move right

# Arrow Keys for Navigation
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+$alt+Left move left
bindsym $mod+$alt+Down move down
bindsym $mod+$alt+Up move up
bindsym $mod+$alt+Right move right

# Split and Fullscreen
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle

# Layout Change
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# Toggle Tiling / Floating
bindsym $mod+$alt+space floating toggle
bindsym $mod+space focus mode_toggle

# Workspace Navigation
# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+$alt+1 move container to workspace number $ws1
bindsym $mod+$alt+2 move container to workspace number $ws2
bindsym $mod+$alt+3 move container to workspace number $ws3
bindsym $mod+$alt+4 move container to workspace number $ws4
bindsym $mod+$alt+5 move container to workspace number $ws5
bindsym $mod+$alt+6 move container to workspace number $ws6
bindsym $mod+$alt+7 move container to workspace number $ws7
bindsym $mod+$alt+8 move container to workspace number $ws8
bindsym $mod+$alt+9 move container to workspace number $ws9
bindsym $mod+$alt+0 move container to workspace number $ws10

# Reload and Restart
bindsym $mod+$alt+c reload
bindsym $mod+$alt+r restart
bindsym $mod+$alt+l exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

bindsym $mod+$alt+x --release exec xkill

### Autostart Applications
# Once
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec picom

## Window rules
for_window [class=".*"] title_format "  %title"
workspace $ws1 output $main_display
workspace $ws2 output $main_display
workspace $ws3 output $main_display
workspace $ws4 output $main_display
workspace $ws5 output $main_display
workspace $ws6 output $main_display
workspace $ws7 output $main_display
workspace $ws8 output $main_display
workspace $ws9 output $main_display
workspace $ws10 output $secondary_display

# Workspace Assignment
assign [class="Chromium"] $ws1
assign [class="firefox"] $ws2
assign [class="discord"] $ws3
assign [class="Emacs"] $ws4
assign [class="Subl"] $ws4
assign [class="Terminator"] $ws5
assign [class="Signal"] $ws6
assign [class="Spotify"] $ws7
assign [class="vlc"] $ws8
assign [class="KeePassXC"] $ws9

# Focus on workspace when opening
for_window [class="Chromium"] workspace $ws1
for_window [class="firefox"] workspace $ws2
for_window [class="discord"] workspace $ws3
for_window [class="Emacs"] workspace $ws4
for_window [class="Subl"] workspace $ws4
for_window [class="Terminator"] workspace $ws5
for_window [class="Signal"] workspace $ws6
for_window [class="Spotify"] workspace $ws7
for_window [class="vlc"] workspace $ws8
for_window [class="KeePassXC"] workspace $ws9

# Always
# Wallpaper Setup
exec_always feh --bg-scale ~/Desktop/dotfiles/wallpaper/lost-in-space.png
# Monitor Setup
 exec_always xrandr --output $main_display --primary --mode 2560x1440 --pos 0x0 --rotate normal --output $secondary_display --mode 1920x1080 --pos 2560x360 --rotate normal --output HDMI-1 --off

## Modes
# Resize Mode
mode "resize" {
    bindsym n resize shrink width 10 px or 10 ppt
    bindsym e resize grow height 10 px or 10 ppt
    bindsym i resize shrink height 10 px or 10 ppt
    bindsym o resize grow width 10 px or 10 ppt

    # Arrow Key Bindings for Resize
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

mode "exit: [l]ogout, sloc[k], [r]eboot, [s]hutdown, [u]suspend" {
  bindsym l exec i3-msg exit
  bindsym r --release exec reboot
  bindsym s --release exec shutdown now
  bindsym u --release exec systemctl suspend; mode "default"
  bindsym k --release exec slock; mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"
}
bindsym $mod+x mode "exit: [l]ogout, sloc[k], [r]eboot, [s]hutdown, [u]suspend"

## Configuration
# Font
font pango:NotoSans-Regular 15

# Floating Window Settings
floating_modifier $mod
tiling_drag modifier titlebar

set $bg_color #1f222d
set $focused_text_color #81a1c1
set $unfocused_text_color #4c566a
set $red_text_color #bf616a
set $white_text_color #ffffff

# Bar Configuration
bar {
    height 30
    position top
    font pango:NotoSans-Regular 18
    # status_command i3status
    output $main_display
    colors {
        background          $bg_color
        focused_workspace   $bg_color $bg_color $focused_text_color
        active_workspace    $bg_color $bg_color #5e81ac
        inactive_workspace  $bg_color $bg_color $unfocused_text_color
        urgent_workspace    $bg_color $bg_color #ee829f
        binding_mode        $bg_color $bg_color $red_text_color
    }
}

# Window Colors
gaps inner 5
client.focused          $bg_color #2e3440 $focused_text_color
client.unfocused        $bg_color $bg_color $unfocused_text_color
client.focused_inactive $bg_color $bg_color $unfocused_text_color
client.urgent           #900000 #900000 $white_text_color