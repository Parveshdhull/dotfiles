#!/usr/bin/env bash

# Start Spotify if no media player is running
if playerctl --list-all 2>&1 | grep -q 'No players'; then
    spotify --uri=%U
else
    case "$1" in
        playpause) playerctl play-pause ;;
        next) playerctl next ;;
        previous) playerctl previous ;;
        stop) playerctl stop ;;
        play) playerctl play ;;
        *) echo "Usage: $0 [command] (playpause, next, previous, stop, play)"; exit 1 ;;
    esac
fi
