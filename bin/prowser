#!/run/current-system/sw/bin/bash

if [[ $1 ]]; then
  s=$1
else
  s=$(xclip -o)
fi

if [[ $s = '' ]]; then
  s="https://www.google.com"
fi

if [[ $s == "www"* ]] || [[ $s == "http"* ]] || [[ $s == "com"* ]]; then
  brave --profile-directory='Profile 56' "$s" >/dev/null 2>&1 &
  disown
else
  brave --profile-directory='Profile 56' "? $s" >/dev/null 2>&1 &
  disown
fi
