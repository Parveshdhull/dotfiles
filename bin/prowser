#!/bin/sh

if [[ $1 ]]; then
  s=$1
else
  s=$(xclip -o -selection primary)
fi

if [[ $s = '' ]]; then
	s="https://www.google.com"
fi

if [[ $s == "www"* ]] || [[ $s == "http"* ]] || [[ $s == "com"* ]]; then
	chromium --guest "$s" --start-maximized > /dev/null 2>&1 &
	disown
else
	chromium --guest "? $s" --start-maximized > /dev/null 2>&1 &
	disown
fi
