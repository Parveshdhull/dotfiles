#!/bin/bash

ppaste() {
    old_content=$(xsel -b)
    xsel -b <<< "$1"
    xdotool type --clearmodifiers "$(xsel -b)"
    xsel -b <<< "$old_content"
}

# Declare an associative array for keywords and URLs
declare -A url_map=(
    ["youtube"]='https://youtube.com'
    ["google"]='https://google.com'
    ["status-mobile"]='https://github.com/status-im/status-mobile'
    ["status-go"]='https://github.com/status-im/status-go'
    ["navigation"]='https://wix.github.io/react-native-navigation/docs/modal'
    ["reanimated"]='https://docs.swmansion.com/react-native-reanimated/docs/'
)

# Check if an argument is provided
if [[ -z $1 ]]; then
    echo "Usage: $0 <keyword>"
    exit 1
fi

# Process the input argument
for keyword in "${!url_map[@]}"; do
    if [[ $1 == *"$keyword"* ]]; then
        sleep 1
        ppaste "${url_map[$keyword]}"
        exit 0
    fi
done

# If no match was found
echo "Unknown keyword"
exit 1
